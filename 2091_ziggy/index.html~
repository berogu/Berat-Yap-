            .navbar a:hover {
            background-color: transparent;
            color: grey;
            }
            .navbar a.active {
            }
            .navbar .icon {
            display: none;
            }
            @media screen and (max-width: 600px) {
            .navbar a:not(:first-child) {display: none;}
            .navbar a.icon {
            float: right;
            display: block;
            }
            }
            @media screen and (max-width: 600px) {
            .navbar.responsive .icon {
            position: absolute;
            right: 0;
            bottom:0;
            }
            .navbar.responsive a {
            float: none;
            display: block;
            text-align: left;
            background-color: white;
            color: black;
            }
            }
